/* pages/mine/mine.wxss */
page{
  height: 100%
}
.container{
  background-color: #ececec;
  min-height: 100%;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}
.mine-top{
  width: 100%;
  height: 380rpx;
  background-color: #00aa90;
  display:flex;
  flex-direction: row;
}
.avatar-left{
width: 130rpx;
height: 130rpx;
margin: auto 40rpx;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  padding-right: 0rpx;
}
.avatar-right{
display: flex;
flex-direction: column;
color: #fff;
margin: auto 10rpx;
}
.avatar-right view{
margin: 2rpx 0rpx;
}
.name-box{
  display: flex;
  flex-direction: row;
}
.name-box text{
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.accont-type{
  font-size: 20rpx;
  height: 30rpx;
  width: 76rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 10rpx;
}
.on{
  background-color: #fcbb42;
}
.off{
    background-color: #fcbb42;
}
.accont{
  font-size: 22rpx;
}
.mine-content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.content{
  width: 100%;
  height: auto;
  margin-top: 36rpx;
}
.mine-list{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #999;
  font-size: 24rpx;
  background: #fff;
}
.mine-list text{
  padding-left: 10rpx;
}
.icon{
width: 50rpx;
height: 50rpx;
padding-top: 14rpx;
float: left;
padding-left: 12rpx;
}
.jt{
  width: 16rpx;
height: 24rpx;
float: right;
padding-top: 28rpx;
padding-right: 10rpx;
}
